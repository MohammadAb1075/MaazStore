            <div class="form-group col-2 ">
                <label asp-for="FactorNo" class="control-label"></label>                
            </div>
            <div class="form-group col-3">                
                <input asp-for="FactorNo" class="form-control form-control-plaintext" readonly/>                
            </div>
            
            <div class="form-group col-2">            
