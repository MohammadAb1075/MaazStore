            	<div  class="col-12 CodesDiv">
					<table id="CodesTable" class="table table-borderless table-sm mb-0 pb-0 border CodesTable">
						<thead>
							<tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].ProductId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].Quantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].Product.UnitPrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].Discount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].DiscountedUnitPrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].RowPriceTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].DiscountedRowPriceTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].CustomerProfitUnitDiscount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FactorRows[0].CustomerProfitTotalDiscount)
                                </th>								
                                  <th style="width:60px;">                                        
                                   </th>
							</tr>
						</thead>

                    <tbody id="CsDiv">                                
                        @for (int i = 0; i < Model.FactorRows?.Count; i++)
                        {
                            	  <tr>
									<td>
								        @(i + 1)                                                                              
									</td>	

									<td>
								        <input asp-for="@Model.FactorRows[i].Product.Name" class="form-control form-control-plaintext" readonly />                                                                              
									</td>
                                    
                                    <td>
										<input asp-for="@Model.FactorRows[i].Quantity" class="form-control form-control-plaintext QtyTotal" readonly />										
										<span asp-validation-for="@Model.FactorRows[i].Quantity" class="text-danger"></span>
									</td>

                                    <td>
										<input asp-for="@Model.FactorRows[i].Product.UnitPrice" class="form-control form-control-plaintext UnitPrice" readonly />
										<span asp-validation-for="@Model.FactorRows[i].Product.UnitPrice" class="text-danger"></span>
									</td>
                                    
                                    <td>
										<input asp-for="@Model.FactorRows[i].Discount" class="form-control form-control-plaintext Discount" readonly />
										<span asp-validation-for="@Model.FactorRows[i].Discount" class="text-danger"></span>
									</td>     
                                    
                                    <td>
										<input asp-for="@Model.FactorRows[i].DiscountedUnitPrice" class="form-control form-control-plaintext DiscountedUnitPrice" readonly />
									</td>
                                                                 
                                    <td>
										<input asp-for="@Model.FactorRows[i].RowPriceTotal" class="form-control form-control-plaintext AmountTotal" readonly />										                                        
									</td>
                                                                 
                                    <td>
										<input asp-for="@Model.FactorRows[i].DiscountedRowPriceTotal" class="form-control form-control-plaintext DiscountedRowPriceTotal" readonly />										                                        
									</td>
                                                                 
                                    <td>
										<input asp-for="@Model.FactorRows[i].CustomerProfitUnitDiscount" class="form-control form-control-plaintext CustomerProfitUnitDiscount" readonly />										                                        
									</td>
                                                                                  
                                    <td>
										<input asp-for="@Model.FactorRows[i].CustomerProfitTotalDiscount" class="form-control form-control-plaintext CustomerProfitUnitDiscount" readonly />										                                        
									</td>
                                                                 
                                     <td style="width:60px;">                                          
                                        </td>
                                    </tr>                                
                        }
                    </tbody>

					</table>                      
                    

                  <table class="table table-sm mb-0 pb-0 border">
						<thead>
							<tr>
								<th style="width:9.09%;">
									Total
								</th>	
                                
                                <th style="width:9.09%;">									
								</th>
                                
								<th style="width:9.09%;">									
                                    <input type="text" id="txtQtyTotal" class="form-control form-control-plaintext" value="" />
								</th>

                                <th style="width:9.09%;">								    
								</th>

                                <th style="width:9.09%;">								    
								</th>                  
                                
                                <th style="width:9.09%;">									
								</th>					

                                <th style="width:9.09%;">									
                                    <input type="text" id="txtAmountTotal" class="form-control form-control-plaintext" value="" />
								</th>					
                                
                                 <th style="width:9%;">                                      
                                </th>
							</tr>
						</thead>
                        </table>

				</div>


            <div class="form-group col-12">            
            </div>

            <div class="form-group col-12">            
            </div>
     </div>

