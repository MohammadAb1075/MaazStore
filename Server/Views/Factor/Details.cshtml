            <div class="form-group col-3">                
                <input asp-for="InsertDateTime" class="form-control form-control-plaintext" readonly />                
            </div>    
              
            <div class="form-group col-2">
                <label asp-for="CustomerName" class="control-label"></label>                
            </div>
            <div class="form-group col-3">                
                <input asp-for="CustomerName" class="form-control form-control-plaintext" readonly />                
